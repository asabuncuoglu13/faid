                                "type": "object",
                                "properties": {
                                    "name": { "type": "string" },
                                    "metrics": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "description": { "type": "string" },
                                                "name": { "type": "string" },
                                                "value": { "type": "number" }
                                            },
                                            "required": ["description", "name", "value"]
                                        }
                                    },
                                    "value_or_threshold": { "type": "string" },
                                    "label": { "type": "string" },
                                    "label_value_or_threshold": { "type": "string" }
                                },
                                "required": ["name", "metrics", "value_or_threshold", "label", "label_value_or_threshold"]
                            }
                        }
                    },
                    "required": ["facets"]
                },
                "version": { "type": "string" }
            },
            "required": ["post_training_bias_metrics", "pre_training_bias_metrics", "version"]
        }
    }
}